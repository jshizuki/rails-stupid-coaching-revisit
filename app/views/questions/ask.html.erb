<div class="container mt-3">
  <h1 class="stupid-coaching">Stupid Coaching</h1>
  <p>Ask your coach anything:</p>
  <form action="answer" data-turbo="false">
    <div class="input-group">
      <input class="form-control form-control-lg" type="text" name="query" placeholder="Type your question here">
      <button class="btn btn-success btn-large" type="submit">Ask</button>
    </div>
  </form>
  <br>
  <% if @user_input %>
    <div class="text-group">
      <p><%= @user_input %></p>
      <p><i>- You</i></p>
    </div>
    <div class="text-group">
      <p><%= @answer %></p>
      <p><i>- Your coach</i></p>
    </div>
  <% end %>
</div>
